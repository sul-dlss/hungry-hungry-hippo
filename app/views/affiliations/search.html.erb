<% @organizations.map do |organization| %>
  <%= tag.li class: 'list-group-item', role: 'option', data: { autocomplete_value: organization.id, autocomplete_label: organization.name } do %>
    <strong><%= organization.name %></strong><br>
    <% if organization.location.present? %><%= organization.location %><br><% end %>
    <% if organization.org_types.present? %>(<%= organization.org_types %>)<br><% end %>
    <% if organization.aliases.present? %><em><%= organization.aliases %></em><% end %>
  <% end %>
<% end %>
