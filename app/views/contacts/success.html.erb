<turbo-frame id="contact-form">
  <h2>Help request successfully sent</h2>
  <p class="mt-3">Your message has been sent to the SDR team. We will respond to you soon.</p>
  <% if params[:welcome] == 'true' %>
    <%= render Elements::ButtonLinkComponent.new(data: { turbo_frame: '_top'}, link: root_path, label: 'Done', variant: :link, ) %>
  <% else %>
    <%= render Elements::ButtonLinkComponent.new(data: { bs_dismiss: 'modal' }, link: '#', label: 'Close', variant: :link) %>
  <% end %>
</turbo-frame>
