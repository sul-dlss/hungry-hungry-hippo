<%= turbo_frame_tag 'globus' do %>
  <div class="row">
    <div class="col pt-3"><%= t('works.edit.messages.globus_notice_html', support_email: Settings.support_email) %></div>
  </div>
  <div class="d-flex align-items-baseline">
    <% if @content.work %>
      <div class="me-4">
        <%= render Elements::ButtonFormComponent.new(label: t('works.edit.buttons.globus_deposit_files'),
                                                     link: content_globuses_path(@content), data: { action: 'dropzone-files#disableDropzone' },
                                                     confirm: @content.content_files.exists? ? t('works.edit.messages.globus_replace_files_confirm') : nil,
                                                     method: :post, top: false, classes: 'my-3') %>

      </div>
      <div>
        <%= link_to t('works.edit.messages.globus_instructions'), Settings.globus.instructions_url %>
      </div>
    <% else %>
      <div class="me-4">
        <%= render Elements::ButtonComponent.new(label: t('works.edit.buttons.globus_deposit_files'), classes: 'my-3', disabled: true) %>

      </div>
      <div>
        Save a draft to enable Globus file deposit. <%= link_to t('works.edit.messages.globus_instructions'), Settings.globus.instructions_url %>
      </div>
    <% end %>
  <div>
<% end %>
