<%= turbo_frame_tag 'admin-card' do %>
  <%= render Elements::CardComponent.new(classes: 'admin-card') do |component| %>
    <% component.with_body do %>
      <%= form_with model: @move_form, url: work_admin_move_index_path(work_druid: params[:work_druid]) do |form| %>
        <%= form.hidden_field :content_id %>
        <%= render Elements::Forms::TextFieldComponent.new(form:, field_name: :collection_druid, label: 'Enter DRUID of the collection you want to move this item to', label_classes: 'fw-bold', width: 500) %>

        <%= render Elements::Forms::SubmitComponent.new(label: 'Submit', classes: 'mt-5') %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
