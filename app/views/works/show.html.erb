<h1 class="h3 mb-4 d-inline-block"><%= @work_form.title %></h1><span class="ms-4 fst-italic status"><%= @status_presenter.status_message %></span>
<%= render Elements::ButtonLinkComponent.new(link: edit_work_path(@work_form.druid), label: 'Edit or deposit', classes: 'float-end', variant: :'outline-primary') if @status_presenter.editable? %>
<%= render Elements::Tables::TableComponent.new(id: 'title-table', classes: 'table-work mb-5', label: 'Title') do |component| %>
  <% component.with_row(label: 'Title', values: [@work_form.title]) %>
<% end %>
<%= render Elements::Tables::TableComponent.new(id: 'description-table', classes: 'table-work mb-5', label: 'Description') do |component| %>
  <% component.with_row(label: 'Abstract', values: [@work_form.abstract]) %>
<% end %>
<%= render Elements::Tables::TableComponent.new(id: 'related-links-table', classes: 'table-work mb-5', label: 'Related content') do |component| %>
  <% component.with_row(label: 'Related links', values: @work_form.related_links.map { |related_link| link_to(related_link.text || related_link.url, related_link.url) }) %>
<% end %>
