<h1 class="h2 mb-3"><%= @work_form.title || 'Untitled deposit' %></h1>
 <div class="d-flex tabbable-panes">
    <div class="nav nav-pills flex-column px-2 py-1 me-5 col-3" role="tablist" aria-orientation="vertical">
        <%= render Works::Edit::TabComponent.new(label: 'Title', tab_name: :title, selected: true) %>
        <%= render Works::Edit::TabComponent.new(label: 'Abstract', tab_name: :abstract) %>
        <%= render Works::Edit::TabComponent.new(label: 'Deposit', tab_name: :deposit) %>
    </div>
    <%= form_with model: @work_form, class: 'w-100' do |form| %>
      <%= form.hidden_field :lock %>
      <%= form.hidden_field :version %>
      <div class="tab-content h-100">
          <%= render Works::Edit::PaneComponent.new(tab_name: :title, label: 'Title of deposit', form:, selected: true) do %>
              <%= render Works::Edit::TitleFieldComponent.new(form:, field_name: :title, required: true, label: 'Title of deposit') %>
          <% end %>
          <%= render Works::Edit::PaneComponent.new(tab_name: :abstract, label: 'Describe your deposit', form:) do %>
              <p>
                  Enter a summary statement (max 600 words) describing the work that you are depositing.
                  A detailed statement may improve the discovery of your work in web searches.
              </p>

              <p>Abstact form goes here</p>
          <% end %>
          <%= render Works::Edit::PaneComponent.new(tab_name: :deposit, form:, label: 'Submit your deposit', render_footer: false) do %>
            <p>
              Be sure you have completed all the required sections. Your deposit may take several hours
              to complete if your filesize is larger than GB.
            </p>
            <%= link_to 'Cancel', works_path %>
            <%= render Elements::Forms::SubmitComponent.new(form:, label: 'Deposit', classes: 'mt-2 ms-2') %>
          <% end %>
      </div>
    <% end %>
  </div>
