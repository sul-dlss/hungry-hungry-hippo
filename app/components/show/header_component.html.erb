<div class="d-flex justify-content-between">
  <div>
    <%= render Elements::HeaderComponent.new(level: :h1, text: title, classes: 'mb-4 d-inline-block') %>
    <span class="ms-4 fst-italic status"><%= status_message %></span>
  </div>
  <div class="d-flex align-items-start">
    <%= render Elements::ButtonLinkComponent.new(link: edit_path, label: 'Edit or deposit', variant: :'outline-primary') if editable? %>
    <%= render Elements::ButtonFormComponent.new(link: destroy_path, label: 'Discard draft', classes: 'ms-2', variant: :'outline-primary', confirm: 'Are you sure?', method: :delete) if discardable? %>
  </div>
</div>
