<%= render Elements::Tables::TableComponent.new(id: 'contributors-table', classes: 'table-work mb-5') do |component| %>
  <% component.with_caption do %><%= render Show::TableHeadingComponent.new(text: label, presenter:, tab: :contributors) %><% end %>
  <% component.with_headers([
                              { label: 'Contributor' },
                              { label: 'ORCID' },
                              { label: 'Role' },
                              { label: 'Affiliation' }
                            ]) %>
  <% contributors.each do |contributor| %>
    <% component.with_row(values: values_for(contributor)) %>
  <% end %>
<% end %>
