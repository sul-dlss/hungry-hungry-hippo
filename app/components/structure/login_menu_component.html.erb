<li class="nav-item dropdown">
  <% if helpers.current_user.present? %>
    <button
      class="nav-link logout-dropdown dropdown-toggle"
      data-bs-toggle="dropdown"
      aria-expanded="false">
      Logged in: <%= helpers.current_user.name || helpers.current_user.sunetid %><% if admin? %> (Admin)<% end %>
    </button>
    <ul class="dropdown-menu">
      <% if admin? %>
        <li><%= link_to 'Admin dashboard', admin_dashboard_path, class: 'dropdown-item' %></li>
      <% end %>
      <li><%= link_to 'Dashboard', dashboard_path, class: 'dropdown-item' %></li>
      <li><%= link_to 'Manage Github account connection', github_integrations_path, class: 'dropdown-item' %></li>
      <li><%= link_to 'Logout', logout_path, class: 'dropdown-item' %></li>
    </ul>
  <% else %>
    <%= link_to 'Login', login_path(referrer: request.original_url), class: 'nav-link' %>
  <% end %>
</li>
