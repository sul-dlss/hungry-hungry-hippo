<%= render SdrViewComponents::Structure::HeaderComponent.new(title: t('app_name'), variant: :white) do |header| %>
  <%= header.with_primary_navigation_link do %>
    <%= render Structure::LoginMenuComponent.new %>
  <% end %>
  <%= header.with_secondary_navigation_link do %>
    <%= render SdrViewComponents::Elements::Navigation::NavItemComponent.new(text: t('contact_sdr'), path: '#', data: { "bs-toggle": "modal", "bs-target": "#contact-form-modal" }) %>
  <% end %>
  <%= header.with_secondary_navigation_link do %>
    <%= render SdrViewComponents::Elements::Navigation::NavItemComponent.new(text: 'Help', path: 'https://sdr.library.stanford.edu/documentation', data: { ahoy_track: 'true' }) %>
  <% end %>
  <%= header.with_secondary_navigation_link do %>
    <%= render SdrViewComponents::Elements::Navigation::NavItemComponent.new(text: 'Why SDR?', path: 'https://sdr.library.stanford.edu/', data: { ahoy_track: 'true' }) %>
  <% end %>
  <%= header.with_secondary_navigation_link do %>
    <%= render SdrViewComponents::Elements::Navigation::NavItemComponent.new(text: 'Terms of Deposit', path: '#', data: { "bs-toggle": "modal", "bs-target": "#tod-modal" }) %>
  <% end %>
<% end %>
<%= render Structure::TermsOfDepositModalComponent.new %>
<%# there are two contact us modals; the first is the regular one; the second pre-selects requesting a collection %>
<%= render Structure::ContactFormModalComponent.new(form_id: 'contact-form-modal', path: new_contacts_path(modal: true)) %>
<%= render Structure::ContactFormModalComponent.new(form_id: 'request-collection-form-modal', path: new_contacts_path(help_how: 'Request access to another collection', modal: true)) %>
