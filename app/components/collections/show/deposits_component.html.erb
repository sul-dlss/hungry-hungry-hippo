<%= render Elements::Tables::TableComponent.new(id: 'deposits-table', classes: 'mb-5',
                                                label: 'Deposits for this collection', show_label: false,
                                                empty_message: 'No deposits to this collection.') do |component| %>
  <% component.with_headers([
                              { label: 'Deposit' },
                              { label: 'Owner' },
                              { label: 'Status' },
                              { label: 'Modified' },
                              { label: t('sharing_link.label'), tooltip: t('sharing_link.tooltip_html') }
                            ]) %>
  <% component.with_rows(collection_deposits) %>
<% end %>
<%= paginate works %>
