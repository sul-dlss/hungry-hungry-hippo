 <div class="form-check">
    <div class="ps-2">
      <%= form.radio_button :doi_option, 'yes', class: 'form-check-input' %>
      <%= form.label :doi_option_yes, helpers.t('collections.edit.fields.doi_option.options.doi_yes'), class: 'form-check-label' %>
    </div>
  </div>
  <div class="form-check pt-2">
    <div class="ps-2">
      <%= form.radio_button :doi_option, 'no', class: 'form-check-input' %>
      <%= form.label :doi_option_no, helpers.t('collections.edit.fields.doi_option.options.doi_no'), class: 'form-check-label' %>
    </div>
  </div>
  <div class="form-check pt-2">
    <div class="ps-2">
      <%= form.radio_button :doi_option, 'depositor_selects', class: 'form-check-input' %>
      <%= form.label :doi_option_depositor_selects, helpers.t('collections.edit.fields.doi_option.options.depositor_selects'), class: 'form-check-label' %>
    </div>
  </div>
<% end %>
