<%= render Edit::TabForm::PaneComponent.new(label:, **pane_args) do |component| %>
  <%= content %>
  <% component.with_help do %>
    <%= help if help? %>
  <% end %>
  <% component.with_footer do %>
    <div class="d-flex">
      <%= render Elements::CancelButtonComponent.new(link: cancel_path, classes: 'me-2') %>
      <%= render Edit::TabForm::PreviousButtonComponent.new(tab_id: component.tab_id, classes: 'me-2') if previous_tab_btn? %>
      <%= deposit_button if deposit_button? %>
      <%= render Edit::TabForm::NextButtonComponent.new(tab_id: component.tab_id) if next_tab_btn? %>
    </div>
  <% end %>
<% end %>
