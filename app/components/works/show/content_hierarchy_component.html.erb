<%= render Elements::Tables::TreegridTableComponent.new(id: 'files-table', label: 'Files', classes: 'table-show') do |component| %>
  <% component.with_header(headers: ['File Name', 'Description', 'Hide']) %>
  <% last_path_parts = [] %>
  <% content_files.each do |content_file| %>
    <%= render Works::Show::ContentFileHierarchyComponent.new(content_file:, last_path_parts:, component:) %>
    <% last_path_parts = content_file.path_parts %>
  <% end %>
<% end %>
