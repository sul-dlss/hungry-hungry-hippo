<% new_path_parts.each.with_index(path_parts.length - new_path_parts.length) do |filepath_part, level| %>
  <% component.with_row_branch(level: level + 1, label: filepath_part, empty_cells: 2) %>
<% end %>

<% component.with_row_leaf(level: path_parts.length + 1, label: filename) do |row_component| %>
  <% row_component.with_cell do %>
    <%= content_file.label %>
  <% end %>
  <% row_component.with_cell do %>
    <%= helpers.human_boolean(content_file.hidden?) %>
  <% end %>
<% end %>
