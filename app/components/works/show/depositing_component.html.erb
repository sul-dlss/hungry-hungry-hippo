<% if alert? %>
  <%= render Elements::AlertComponent.new(variant: :success, dismissible: true,
                                          title: 'Deposit successfully submitted',
                                          data: { turbo_permanent: true }, id: 'depositing-alert') do %>
    <ul>
      <li>Your deposit is currently making its way through our system.</li>
      <li>You will receive an email when your deposit is complete.</li>
      <li>You can create or edit other items while this deposit is in progress.</li>
    </ul>
  <% end %>
<% else %>
  <%# This is so that when the page morphs, the alert is permanent. %>
  <div id="depositing-alert" data-turbo-permanent="true"></div>
<% end %>
