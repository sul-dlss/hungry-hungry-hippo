<%= render Elements::Tables::TreegridTableComponent.new(id: 'content-table', label: 'File list', show_label: false, role: 'treegrid', data: { controller: 'treegrid', action: 'keydown->treegrid#navigate', treegrid_target: 'table' }) do |component| %>
  <% component.with_header(headers: ['File Name', 'Description', 'Hide', 'Delete']) %>
  <% last_path_parts = [] %>
  <% content_files.each do |content_file| %>
    <%= render Works::Edit::ContentFileHierarchyComponent.new(content_file:, last_path_parts:, component:) %>
    <% last_path_parts = content_file.path_parts %>
  <% end %>
<% end %>
