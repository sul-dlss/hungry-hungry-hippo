<%= render Elements::HeaderComponent.new(level: :h3, text: label, classes: 'mb-4') %>

<% collections.each do |collection| %>
  <%= render Elements::HeaderComponent.new(level: :h4, text: link_to(collection.title, "/collections/#{collection.druid}")) %>
  <%= render Dashboard::Show::WorksListComponent.new(collection:) %>

  <%= link_to new_work_path, class: 'btn btn-primary' do %>
    <div class="align-self-center d-flex justify-content-center">Deposit to this collection</div>
  <% end %>
<% end %>
