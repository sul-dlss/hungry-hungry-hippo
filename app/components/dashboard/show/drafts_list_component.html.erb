<%= render Elements::Tables::TableComponent.new(
      id:, label: 'Drafts', show_label: false,
      empty_message: 'You do not have any deposits in progress.'
    ) do |component| %>
    <% component.with_headers([
                                { label: 'Deposit' },
                                { label: 'Collection' },
                                { label: 'Last modified' }
                              ]) %>
    <% works.each do |work| %>
    <% component.with_row(values: values_for(work), id: id_for(work)) %>
  <% end %>
<% end %>
