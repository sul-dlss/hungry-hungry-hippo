<%= tag.div(id:,
            class: classes,
            role: 'tabpanel',
            'aria-labelledby': tab_id,
            tabindex: '0',
            data: { tab_error_target: 'pane' }) do %>
            <div class="d-flex flex-column justify-content-between h-100">
                <div>
                    <div class="h4"><%= label %></div>
                    <%= content %>
                </div>
                <% if render_footer? %>
                    <div>
                        <%= render Elements::Forms::SubmitComponent.new(form:, label: 'Save as draft', variant: :'outline-primary') %>
                        <%= render Elements::NextButtonComponent.new(tab_id:) %>
                    </div>
                <% end %>
            </div>
<% end %>
