<%= form.collection_checkboxes field_name, input_collection, value_method, text_method do |builder| %>
  <%= tag.div class: div_classes do %>

    <% disabled = disabled_values.include?(builder.object) %>
    <%= builder.check_box(class: checkbox_classes_for(disabled), data: input_data, disabled:, readonly: disabled) %>
    <%= builder.label(class: label_classes_for(disabled)) %>
  <% end %>
<% end %>
<%= render SdrViewComponents::Forms::InvalidFeedbackComponent.new(form:, field_name:) %>
