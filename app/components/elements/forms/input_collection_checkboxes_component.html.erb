  <%= tag.div class: div_classes do %>

    <% disabled = disabled_values.include?(builder.object) %>
    <%= builder.check_box(class: 'form-check-input', data: input_data, disabled:, readonly: disabled) %>
    <%= builder.label(class: 'form-check-label') %>
  <% end %>
<% end %>
