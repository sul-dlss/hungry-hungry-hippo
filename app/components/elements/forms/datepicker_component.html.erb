<%= tag.div class: container_classes, hidden:, data: picker_data do %>
  <%= render Elements::Forms::LabelComponent.new(form:, field_name:, label_text: label, hidden_label:, classes: label_classes) %>
  <div class="input-group">
    <%= form.text_field field_name, class: 'form-control', required:, aria: field_aria, disabled:, data:, placeholder:, style: styles, form: form_id %>
    <span class="input-group-text" data-datepicker-target="toggle"><%= helpers.calendar_icon %></span>
  </div>
  <%= render Elements::Forms::InvalidFeedbackComponent.new(form:, field_name:) %>
  <%= render Elements::Forms::HelpTextComponent.new(id: help_text_id, help_text:) %>
<% end %>
