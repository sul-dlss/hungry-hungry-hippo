<%= tag.div class: container_classes, hidden:, data: do %>
  <%= render Elements::Forms::LabelComponent.new(form:, field_name:, tooltip:, label_text: label, hidden_label:, classes: label_classes) %>
  <%= form.date_field field_name, class: input_classes, required:, aria: field_aria, disabled:, data: input_data, placeholder:, style: styles, form: form_id, readonly:, min:, max: %>
  <%= render SdrViewComponents::Forms::InvalidFeedbackComponent.new(form:, field_name:, classes: error_classes) %>
  <%= render SdrViewComponents::Forms::HelpTextComponent.new(id: help_text_id, text: help_text) %>
<% end %>
