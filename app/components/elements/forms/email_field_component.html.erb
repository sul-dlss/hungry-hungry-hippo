<%= tag.div class: container_classes, hidden:, data: do %>
  <%= render SdrViewComponents::Forms::LabelComponent.new(form:, field_name:, text: label, hidden: hidden_label, classes: label_classes) %>
  <%= render SdrViewComponents::Forms::HelpTextComponent.new(id: help_text_id, text: help_text) %>
  <%= form.email_field field_name, class: 'form-control', required:, aria: field_aria, disabled:, data: input_data, placeholder:, style: styles, form: form_id %>
  <%= render SdrViewComponents::Forms::InvalidFeedbackComponent.new(form:, field_name:) %>
<% end %>
