<%= tag.div class: container_classes, data: do %>
  <div class="d-flex"> <%# Aligns label and tooltip %>
    <%= render SdrViewComponents::Forms::LabelComponent.new(form:, field_name:, text: label, classes: label_classes, hidden: hidden_label, tooltip:) %>
  </div>
  <div class="btn-group btn-group-toggle" role="group">
    <%= left_toggle_option %>
    <%= right_toggle_option %>
  </div>
  <%= render SdrViewComponents::Forms::InvalidFeedbackComponent.new(form:, field_name:) %>
<% end %>
