<div class="row" data-controller="form-date">
  <div class="col-2">
    <%= render Elements::Forms::TextFieldComponent.new(form:, field_name: :year, label: helpers.t('publication_date.edit.fields.year.label'),
                                                       data: { form_date_target: 'year', action: 'form-date#update' }) %>
  </div>
  <div class="col-2">
    <%= render Elements::Forms::SelectMonthFieldComponent.new(form:, field_name: :month, label: helpers.t('publication_date.edit.fields.month.label'),
                                                              data: { form_date_target: 'month', action: 'form-date#update' }) %>
  </div>
  <div class="col-2">
    <%= render Elements::Forms::SelectDayFieldComponent.new(form:, field_name: :day, label: helpers.t('publication_date.edit.fields.day.label'),
                                                            data: { form_date_target: 'day', action: 'form-date#update' }) %>
  </div>
  <div class="col-1 d-flex align-items-stretch">
    <%= render Elements::DeleteButtonComponent.new(data: { action: 'form-date#reset' }) %>
  </div>
</div>
